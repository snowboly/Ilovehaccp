{
  "version": "1.0.0",
  "locked": true,
  "section": "Hazard Analysis",
  "scope": "per_process_step",
  "questions": [
    {
      "id": "hazard_identification",
      "text": "Identification des dangers",
      "type": "group",
      "questions": [
        {
          "id": "bio_hazards",
          "text": "Des dangers biologiques sont-ils susceptibles de se produire à cette étape?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "bio_hazards_description",
              "text": "Description des dangers biologiques",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "chem_hazards",
          "text": "Des dangers chimiques sont-ils susceptibles de se produire à cette étape?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "chem_hazards_description",
              "text": "Description des dangers chimiques",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "phys_hazards",
          "text": "Des dangers physiques sont-ils susceptibles de se produire à cette étape?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "phys_hazards_description",
              "text": "Description des dangers physiques",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "allergen_hazards",
          "text": "Des dangers allergènes sont-ils susceptibles de se produire à cette étape?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "allergen_hazards_description",
              "text": "Description des dangers allergènes",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "no_hazards_justification",
          "text": "Justification de l'absence de dangers identifiés",
          "type": "text",
          "required": "when_all_hazards_false",
          "show_if_all_false": [
            "bio_hazards",
            "chem_hazards",
            "phys_hazards",
            "allergen_hazards"
          ]
        }
      ]
    },
    {
      "id": "hazard_evaluation",
      "text": "Évaluation des dangers",
      "type": "group_per_hazard",
      "questions": [
        {
          "id": "severity",
          "text": "Gravité du danger",
          "description": "Faible : Aucune blessure, problème mineur de qualité. Moyen : Maladie réversible, impact à court terme. Élevé : Maladie grave ou hospitalisation.",
          "tooltip": "La gravité décrit la gravité de l'impact si ce danger se produisait, allant de problèmes mineurs de qualité à des maladies graves.",
          "type": "single_select",
          "options": [
            "Faible",
            "Moyen",
            "Élevé"
          ],
          "required": true
        },
        {
          "id": "likelihood",
          "text": "Probabilité d'occurrence",
          "description": "Faible : Peu probable. Moyen : Occasionnel. Élevé : Probable ou fréquent.",
          "tooltip": "La probabilité décrit la fréquence à laquelle ce danger pourrait se produire dans des conditions réelles de processus.",
          "type": "single_select",
          "options": [
            "Faible",
            "Moyen",
            "Élevé"
          ],
          "required": true
        },
        {
          "id": "is_significant",
          "text": "Ce danger est-il significatif?",
          "tooltip": "Un danger significatif est un danger qui est susceptible de se produire et susceptible de causer une maladie ou une blessure si ce n'est pas contrôlé. Cette décision déclenche le processus de détermination du CCP.",
          "type": "boolean",
          "required": true
        }
      ]
    },
    {
      "id": "control_measures",
      "text": "Mesures de contrôle existantes",
      "type": "group_per_hazard",
      "questions": [
        {
          "id": "applied_controls",
          "text": "Quelles mesures de contrôle s'appliquent à ce danger?",
          "tooltip": "Les mesures de contrôle sont des actions ou des activités qui peuvent être utilisées pour prévenir ou éliminer un danger pour la sécurité alimentaire ou le réduire à un niveau acceptable.",
          "type": "multi_select",
          "options": [
            "Programme préalable (PRP)",
            "Contrôle de processus",
            "Aucun"
          ],
          "required": true
        }
      ]
    }
  ]
}
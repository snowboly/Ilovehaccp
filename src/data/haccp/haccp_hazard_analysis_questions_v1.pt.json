{
  "version": "1.0.0",
  "locked": true,
  "section": "Hazard Analysis",
  "scope": "per_process_step",
  "questions": [
    {
      "id": "hazard_identification",
      "text": "Identificação de Riscos",
      "type": "group",
      "questions": [
        {
          "id": "bio_hazards",
          "text": "Existem riscos biológicos razoavelmente prováveis de ocorrer nesta etapa?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "bio_hazards_description",
              "text": "Descrição dos riscos biológicos",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "chem_hazards",
          "text": "Existem riscos químicos razoavelmente prováveis de ocorrer nesta etapa?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "chem_hazards_description",
              "text": "Descrição dos riscos químicos",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "phys_hazards",
          "text": "Existem riscos físicos razoavelmente prováveis de ocorrer nesta etapa?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "phys_hazards_description",
              "text": "Descrição dos riscos físicos",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "allergen_hazards",
          "text": "Existem riscos de alérgenos razoavelmente prováveis de ocorrer nesta etapa?",
          "type": "boolean",
          "required": true,
          "conditional_questions": [
            {
              "id": "allergen_hazards_description",
              "text": "Descrição dos riscos de alérgenos",
              "type": "text",
              "required": true,
              "show_if": true
            }
          ]
        },
        {
          "id": "no_hazards_justification",
          "text": "Justificativa para não identificação de riscos",
          "type": "text",
          "required": "when_all_hazards_false",
          "show_if_all_false": [
            "bio_hazards",
            "chem_hazards",
            "phys_hazards",
            "allergen_hazards"
          ]
        }
      ]
    },
    {
      "id": "hazard_evaluation",
      "text": "Avaliação de Riscos",
      "type": "group_per_hazard",
      "questions": [
        {
          "id": "severity",
          "text": "Gravidade do risco",
          "description": "Baixo: Sem lesão, problema de qualidade menor. Médio: Doença reversível, impacto de curto prazo. Alto: Doença grave ou hospitalização.",
          "tooltip": "Gravidade descreve a seriedade do impacto se este risco ocorrer, variando de problemas de qualidade menores a doenças graves.",
          "type": "single_select",
          "options": [
            "Baixo",
            "Médio",
            "Alto"
          ],
          "required": true
        },
        {
          "id": "likelihood",
          "text": "Probabilidade de ocorrência",
          "description": "Baixo: Improvável. Médio: Ocasional. Alto: Provável ou frequente.",
          "tooltip": "Probabilidade descreve a frequência com que este risco pode ocorrer sob as condições reais do processo.",
          "type": "single_select",
          "options": [
            "Baixo",
            "Médio",
            "Alto"
          ],
          "required": true
        },
        {
          "id": "is_significant",
          "text": "Este risco é significativo?",
          "tooltip": "Um risco significativo é aquele que é provável de ocorrer e provável de causar doença ou lesão se não for controlado. Esta decisão aciona o processo de determinação do Ponto Crítico de Controle (PCC).",
          "type": "boolean",
          "required": true
        }
      ]
    },
    {
      "id": "control_measures",
      "text": "Medidas de Controle Existente",
      "type": "group_per_hazard",
      "questions": [
        {
          "id": "applied_controls",
          "text": "Quais medidas de controle se aplicam a este risco?",
          "tooltip": "Medidas de controle são ações ou atividades que podem ser usadas para prevenir ou eliminar um risco à segurança alimentar ou reduzi-lo a um nível aceitável.",
          "type": "multi_select",
          "options": [
            "Programa de Pré-requisito (PPR)",
            "Controle de processo",
            "Nenhum"
          ],
          "required": true
        }
      ]
    }
  ]
}